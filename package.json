{
  "name": "basicss",
  "version": "0.0.1",
  "description": "Minimalist css framework",
  "main": "basic.css",
  "author": "SÃ©bastien Pereda <sebastien.pereda@gmail.com> (https://sebastien-pereda.github.io)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/basicss/basicss"
  },
  "keywords": [
    "css",
    "minimalist",
    "framework"
  ],
  "devDependencies": {
    "autoprefixer": "^6.7.2",
    "browser-sync": "^2.19.0",
    "npm-run-all": "^4.1.2",
    "onchange": "^3.2.1",
    "postcss-cli": "^2.6.0",
    "stylus": "^0.54.5"
  },
  "scripts": {
    "start": "npm-run-all build -p watch serve",
    "build:css": "stylus src/stylus/basic.styl -o css/basic.css && stylus -c src/stylus/basic.styl -o css/basic.min.css",
    "prefix:css": "postcss -u autoprefixer -r css/*.css",
    "build": "npm-run-all build:css prefix:css",
    "watch": "onchange 'src/stylus' -- npm run build",
    "serve": "browser-sync start --server --files 'index.html' 'css/*.css'",
    "postinstall": "npm start"
  }
}
